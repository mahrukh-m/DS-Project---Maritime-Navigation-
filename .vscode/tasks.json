{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build with SFML",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",          
        "-IC:/SFML/include",
        "-LC:/SFML/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-o",
        "app"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    }
  ]
}
